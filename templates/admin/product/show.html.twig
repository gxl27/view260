{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                
                <td colspan='2'><img style='max-width:250px' src="{{ vich_uploader_asset(product, 'productImages') }} " alt="product-{{ product.id }}"> </td>           
            </tr>
            <tr>
                
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                
                <th>Name</th>
                <td>{{ product.variant.name }} {{ product.color.name }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.statusFormated }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
