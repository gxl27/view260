{% extends 'base.html.twig' %}

{% block title %}Variant{% endblock %}

{% block body %}
    <h1>Variant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ variant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ variant.name }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ variant.updatedAt ? variant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ variant.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class='wrapper'>
        {% for product in variant.products %}
            <a href="{{ path('app_product_show', {id:product.id}) }}"><div> <img style='max-width:50px' src="{{ vich_uploader_asset(product, 'productImages') }} " alt="product-{{ product.id }}"> {{ variant.name }} {{ product.color.name }}</div></a>
        {% endfor %}
    </div>

    <a href="{{ path('app_variant_index') }}">back to list</a>

    <a href="{{ path('app_variant_edit', {'id': variant.id}) }}">edit</a>

    {{ include('admin/variant/_delete_form.html.twig') }}
{% endblock %}
